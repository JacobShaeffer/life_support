<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each_slice(2) do |task1, task2| %>
		<div class="row">
    	<%= render task1 %>
			<p>
				<%= link_to "Show this task", task1 %>
			</p>
			<% if task2 %>
    		<%= render task2 %>
				<p>
					<%= link_to "Show this task", task2 %>
				</p>
			<% end %>
		</div>
  <% end %>
</div>

